- title h(@detail.name)

= partial :detail, :detail => @detail

%p
  Fetch this data:
  %code
    %pre== $ curl #{ absolute_url(:detail, @detail, :format => @detail.content_type) }

- if @detail.from_url
  %br
  %p
    This response is cached from a remote source,
    == #{ link_to 'Update It', resource(@detail, :update_cached) }.

  %p
    == Data was last fetched on #{ time_abbr(@detail.cached_at) }.
    %br
    Remote URL:
    %code== #{h @detail.from_url }

%p
  = delete_button(@detail, 'Delete This Record', :class => 'delete-link')