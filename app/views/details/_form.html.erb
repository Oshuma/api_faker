<%= error_messages_for @detail %>

<%= form_for(@detail,
    :action => (request.params['action'] == 'edit' ? resource(@detail) : resource(:details))) do %>
  <p><%= text_field :name, :label => 'Name: ' %></p>
  <p><%= text_area :content, :rows => '20', :cols => '60' %></p>
  <p><%= select :content_type, :collection => @detail.content_types %></p>
  <p>
    <%= submit 'Save' %> -
    <%= link_to 'Cancel', request.params['action'] == 'edit' ? resource(@detail) : url(:root) %>
  </p>
<% end =%>
